<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <configSections>
    <section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler, log4net" />
  </configSections>
  <log4net>
    <appender name="ColoredConsole" type="log4net.Appender.ManagedColoredConsoleAppender">
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="[%-5level | %date] %logger: %message%newline" />
      </layout>
      <mapping>
        <level value="DEBUG" />
        <foreColor value="Blue" />
      </mapping>
      <mapping>
        <level value="INFO" />
        <foreColor value="White" />
      </mapping>
      <mapping>
        <level value="WARN" />
        <foreColor value="Yellow" />
      </mapping>
      <mapping>
        <level value="ERROR" />
        <foreColor value="Red" />
      </mapping>
    </appender>
    <appender name="File" type="log4net.Appender.RollingFileAppender">
      <appendToFile value="true" />
      <file value="./log/RankingsServer.log" />
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="[%-5level | %date] %logger: %message%newline" />
      </layout>
      <lockingModel type="log4net.Appender.FileAppender+MinimalLock" />
      <maximumFileSize value="25MB" />
      <maxSizeRollBackups value="10" />
    </appender>
    <root>
      <level value="INFO" />
      <appender-ref ref="ColoredConsole" />
      <appender-ref ref="File" />
    </root>
  </log4net>
  <startup>
    <supportedRuntime version="v7.0" sku=".NETFramework,Version=v7.0.9" />
  </startup>
</configuration>